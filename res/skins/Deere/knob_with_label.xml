<!DOCTYPE template>
<!--
  Description:
    A standard knob.
  Variables:
    control: The control to connect to.
-->
<Template>
  <SizeAwareStack>
    <Children>

      <WidgetGroup>
        <MinimumSize>30,30</MinimumSize>
        <MaximumSize>30,36</MaximumSize>
        <Layout>vertical</Layout>
        <Children>
          <Template src="skin:knob.xml"/>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <MinimumSize>30,37</MinimumSize>
        <MaximumSize>30,40</MaximumSize>
        <Layout>vertical</Layout>
        <Children>
          <Template src="skin:knob.xml"/>
          <Label>
            <Size>30f,10f</Size>
            <ObjectName>KnobLabel</ObjectName>
            <Text><Variable name="label"/></Text>
          </Label>
        </Children>
      </WidgetGroup>

    </Children>
  </SizeAwareStack>
</Template>
